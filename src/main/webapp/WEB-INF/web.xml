<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
  <display-name>Archetype Created Web Application</display-name>
  
  
  
  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>lv.ddgatve.nt.exam.CharsetFilter</filter-class>
      <init-param>
        <param-name>requestEncoding</param-name>
        <param-value>UTF-8</param-value>
      </init-param>
  </filter>

  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>*.js</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>ExamlistJsServlet</servlet-name>
    <servlet-class>lv.ddgatve.nt.exam.ExamlistJsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GradingServlet</servlet-name>
    <servlet-class>lv.ddgatve.nt.exam.GradingServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>lv.ddgatve.nt.exam.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>lv.ddgatve.nt.exam.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SwitchQuestionServlet</servlet-name>
    <servlet-class>lv.ddgatve.nt.exam.SwitchQuestionServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ExamlistJsServlet</servlet-name>
    <url-pattern>/examlist.js</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GradingServlet</servlet-name>
    <url-pattern>/grading</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SwitchQuestionServlet</servlet-name>
    <url-pattern>/switchQuestion</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  
</web-app>
